// 
// Library of mixins and variables
// 

@import 'nib'

highlight-color = #6a0bc1
sans-serif = 'Helvetica', 'Arial', 'Sans-serif'
serif = 'Georgia', 'Serif'
font-size = 16px

font-face(family, filename, style = normal, weight = normal)
  @font-face
    font-family family
    font-weight weight
    font-style style
    src url("/fonts/" + filename + ".eot?#iefix") format("embedded-opentype")
  @font-face
    font-family family
    font-weight weight
    font-style style
    src url("/fonts/" + filename + ".woff") format("woff"), url("/fonts/" + filename + ".ttf") format("truetype"), url("/fonts/" + filename + ".svg") format("svg")